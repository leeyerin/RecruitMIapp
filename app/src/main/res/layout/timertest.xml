<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <Button
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/startButton"
            android:layout_alignBottom="@+id/startButton"
            android:layout_alignEnd="@+id/btn_status"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_btn"
            android:text="Record" />

        <TextView
            android:id="@+id/time_out"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#8E24AA"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_status"
            android:layout_below="@+id/btn_status"
            android:layout_marginStart="16dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/round_btn"
            android:text="Start" />

        <ImageView
            android:id="@+id/btn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/time_out"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:background="@drawable/stopwatchstop"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/recording"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>